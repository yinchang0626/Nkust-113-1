@model Sinewave.Models.BlogEditViewModel

<h1>Delete Post: @Model.Title</h1>

<p>Are you sure you want to delete this post?</p>

<div>
    <button form="delete-form" type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
        Delete
    </button>
    <a href="@Url.Action("Index", "Blog")" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" style="text-decoration: none;">
        Cancel
    </a>
</div>

<form id="delete-form" method="post" action="@Url.Action("Delete", "Blog", new { slug = Model.Slug })" style="display:none;">
</form>
