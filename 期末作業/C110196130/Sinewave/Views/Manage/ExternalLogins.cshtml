@model ExternalLoginsViewModel
@{
    ViewData["Title"] = "Manage your external logins";
    ViewData.AddActivePage(ManageNavPages.ExternalLogins);
}

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
@if (Model.CurrentLogins?.Count > 0)
{
    <h1 class="mb-4 text-2xl font-semibold text-gray-900 dark:text-gray-100">
        Registered Logins
    </h1>
    <div class="prose prose-xl">
        <table>
            <tbody>
                @foreach (var login in Model.CurrentLogins)
                {
                    <tr>
                        <td><h3 class="@Css.H3">@login.LoginProvider</h3></td>
                        <td>
                            @if (Model.ShowRemoveButton)
                            {
                                <form asp-action="RemoveLogin" method="post">
                                    <div>
                                        <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                        <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                        <button type="submit" class="@Css.PrimaryButton" title="Remove this @login.LoginProvider login from your account">Remove</button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                @: &nbsp;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@if (Model.OtherLogins?.Count > 0)
{
    <h1 class="mb-4 text-2xl font-semibold text-gray-900 dark:text-gray-100">
        Add another service to log in.
    </h1>
    <form asp-action="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button type="submit" class="@Css.SecondaryButton mr-2 mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                }
            </p>
        </div>
    </form>
}
